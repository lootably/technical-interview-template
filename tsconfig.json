{
  "extends": "./base.tsconfig.json",
  "compilerOptions": {
    "outDir": "build/",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".eslintrc.cjs",
    "app/next.config.js"
  ],
  "exclude": [
    "node_modules",
    "src/"
  ]
}
